
@{
    ViewData["Title"] = "BuildForm";
}

@section head{
    <link rel="stylesheet" href="~/lib/form-builder/css/tether.min.css" />
    <link rel="stylesheet" href="~/lib/form-builder/css/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/form-builder/css/form_builder.css" />
}


@section Scripts{
    <script src="~/lib/form-builder/js/jquery-ui.min.js"></script>
    <script src="~/lib/form-builder/js/tether.min.js"></script>
    <script src="~/lib/form-builder/js/form_builder.js"></script>
}

<ul class="nav nav-tabs mb-3 justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="nav-viewer-tab" data-toggle="tab" href="#nav-viewer" role="tab" aria-controls="nav-home" aria-selected="true">
            <i class="fi-xtluxl-eye-thin"></i>
            Viewer
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="nav-creator-tab" data-toggle="tab" href="#nav-creator" role="tab" aria-controls="nav-profile" aria-selected="false">
            <i class="fi-xtluxl-edit-thin"></i>
            Creator
        </a>
    </li>
</ul>
<div class="tab-content h-100" id="nav-tabContent" style="margin: 0; padding:0;">
    <div class="tab-pane fade show active h-100" id="nav-viewer" role="tabpanel" aria-labelledby="nav-viewer-tab">
        <div class="row h-100">
            <div class="col-md-5 " id="form-list">
                <div>
                    <ul class="list-group">
                        <li class="list-group-item " >No Forms</li>
                    </ul>
                </div>
            </div>
            <div class="col " >
                <div id="form-view">

                </div>
                <div id="export_html_btn">
                    <button style="cursor: pointer;" disabled class="btn btn-primary" id="send-form-btn">Send Form</button>
                </div>
            </div>

        </div>
    </div>
    <div class="tab-pane fade h-100 " id="nav-creator" role="tabpanel" aria-labelledby="nav-creator-tab">
        <div class="form_builder h-100" style="">
            <div class="row h-100">
                <div class="col-sm-2">
                    <nav class="nav-sidebar">
                        <ul class="nav">
                            <li class="form_bal_titlefeild">
                                <a href="javascript:;">Form Title <i class="fa fa-plus-circle pull-right"></i></a>
                            </li>
                            <div id="form-builder-elements" class="disabledDiv">
                                <li class="form_bal_textfield">
                                    <a href="javascript:;">Text Field <i class="fa fa-plus-circle pull-right"></i></a>
                                </li>
                                <li class="form_bal_textarea">
                                    <a href="javascript:;">Text Area <i class="fa fa-plus-circle pull-right"></i></a>
                                </li>
                                <li class="form_bal_select">
                                    <a href="javascript:;">Select <i class="fa fa-plus-circle pull-right"></i></a>
                                </li>
                                <li class="form_bal_radio">
                                    <a href="javascript:;">Radio Button <i class="fa fa-plus-circle pull-right"></i></a>
                                </li>
                                <li class="form_bal_checkbox">
                                    <a href="javascript:;">Checkbox <i class="fa fa-plus-circle pull-right"></i></a>
                                </li>
                                <li class="form_bal_email">
                                    <a href="javascript:;">Email <i class="fa fa-plus-circle pull-right"></i></a>
                                </li>
                                <li class="form_bal_number">
                                    <a href="javascript:;">Number <i class="fa fa-plus-circle pull-right"></i></a>
                                </li>
                                <li class="form_bal_password">
                                    <a href="javascript:;">Password <i class="fa fa-plus-circle pull-right"></i></a>
                                </li>
                                <li class="form_bal_date">
                                    <a href="javascript:;">Date <i class="fa fa-plus-circle pull-right"></i></a>
                                </li>
                                <li class="form_bal_button">
                                    <a href="javascript:;">Button <i class="fa fa-plus-circle pull-right"></i></a>
                                </li>
                            </div>

                        </ul>
                    </nav>
                </div>
                <div class="col-md-4 bal_builder">
                    <div class="form_builder_area"></div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                        <form class="form-horizontal">
                            <div class="preview"></div>
                            <div style="display: none" class="form-group plain_html"><textarea rows="50" class="form-control"></textarea></div>
                        </form>
                    </div>
                </div>
                <div id="export_html_btn">
                    <button style="cursor: pointer;display: none" disabled class="btn btn-info export_html ">Export HTML</button>
                </div>
            </div>

        </div>
    </div>
    
</div>




